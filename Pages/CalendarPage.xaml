<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bloom.Pages.CalendarPage">

    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="10">

        <Label x:Name="MonthYearLabel" FontSize="24" HorizontalOptions="Center"
               VerticalOptions="Start" Margin="0,10,0,10"/>
        <Grid x:Name="CalendarGrid" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="10">

        </Grid>

    </StackLayout>

    <ContentPage.GestureRecognizers>
        <SwipeGestureRecognizer Direction="Left" Swiped="swipedLeft"/>
        <SwipeGestureRecognizer Direction="Right" Swiped="swipedRight"/>
    </ContentPage.GestureRecognizers>

</ContentPage>